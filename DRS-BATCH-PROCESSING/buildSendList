#!/bin/bash -v
#
# Do the steps to getting files ready
# 2018 VI.17 - batches are moved to $RP/batchbuilds on success, and only if no duplicates
# RemoveDuplicateVolumes.sh > BuildList.txt
# ls $PR/batchBuilds
export BATCH_EXCLUDE_LIST=dontBuildBatches
find $PR/batchBuilds -maxdepth 2 -type d -mindepth 2 > volList.txt
RemoveDepositedVolumePaths.sh volList.txt  UndepositedVolumes
 GetCumBuiltFileCounts.sh UndepositedVolumes > testFile
awk  -F'[|]' '{ if ( $3 < 250000) print $1 }' testFile | xargs -n 1 dirname | sort -u >  rawlist2
[ -f ${BATCH_EXCLUDE_LIST} ] && { grep -v -f ${BATCH_EXCLUDE_LIST} rawList2 > ../buildList.txt ; } || { cp rawList2 ../buildList.txt ;  }